/* pages/movieDetail/movieDetail.wxss */
.movieDetailContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0 70rpx;
}
.movieWrapper{
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  padding: 80rpx 0;
}
.movie-background{
  position: absolute;
  width: 120%;
  height: 120%;
  top: 0;
  left: 0;
  z-index: -1;
  transform: scale(2);
  background-size: cover;
  filter:blur(20rpx);
}
.movie-background::after{
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  background: rgba(0,0,0,.2);
}
.movie_content{
  width: 100%;
  display: flex;
  align-items: flex-start;
  padding: 0 30rpx;
}
.movie_img{
  width: 200rpx;
  height: 260rpx;
}
.movie_name{
  font-size: 40rpx !important;
  line-height: 56rpx !important;
}
.ratingBox{
  margin: 20rpx 0;
}
.rating{
  color:#FFA500;
  font-size: 40rpx !important;
}
.movie_info{
  display: flex;
  flex-direction: column;
  color: #fff;
  margin-left: 30rpx;
  max-width: 62%;
}
.movie_info text{
  font-size: 26rpx;
  line-height: 36rpx;
}
.watchMovie{
  background: #000;
  color: #fff;
}
.introWrapper{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
.introWrapper .summary{
  font-size: 26rpx;
  margin: 15rpx 0;
  line-height: 50rpx;
  font-weight: 300;
}
.intro{
  font-size: 30rpx;
}
/* pages/template/list-template.wxss */
.listContainer{
  margin: 40rpx auto;
  width: 90%;
}
.listInfo{
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}
.listContainer,.listInfo{
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 20rpx;
}
.listContainer .conImg{
  width: 100%;
  height: 350rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.listContainer .title{
  font-size: 32rpx;
  line-height: 50rpx;
  margin: 10rpx 0;
}
.listContainer .subTitle{
  font-size: 32rpx;
  color: #888;
  line-height: 50rpx;
}
.listContainer .foot{
  display: flex;
  align-items: center;
  justify-content: space-between;
  vertical-align: middle;
}
.listContainer .foot > view{
  display: flex;
}
.listContainer .foot .avatar{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.listContainer .foot text{
  font-size: 26rpx;
  /* margin-right: 15rpx; */
  color: #888;
}
.listContainer .icon{
  width: 42rpx;
  height: 42rpx;
  margin: 0 10rpx;
}